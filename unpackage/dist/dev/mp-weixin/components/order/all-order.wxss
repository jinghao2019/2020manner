
.allorder{
	width: 100%;
	background-color: #ebebeb;
	padding-top: 40rpx;
}
.order{
	width: 80%;
	background-color: #ffffff;
	padding: 0 50rpx 20rpx 50rpx;
	border-radius: 30rpx;
}
.name>view,.name>image{
	font-size: 35rpx;
	font-weight: 600;
	margin-top: 20rpx;
}
.order>view:first-child>view:last-child{
	font-size: 35rpx;
	font-weight: 600;
	color: #550000;
	margin-top: 20rpx;
}
.time{
	color: #aaaaaa;
}
.time>view:last-child{
	margin-left: 10rpx;
}
.goods{
	margin-top: 40rpx;
	color: #6a6a6a;
}
.goods>view:last-child{
	font-size: 35rpx;
	font-weight: 600;
	color: #ff0000;
}
.status{
	margin-top: 40rpx;
}
.status>view:first-child>view:last-child{
	color: #550000;
	margin-left: 10rpx;
}
.status>view:last-child>view:first-child{
	width: 150rpx;
	height: 70rpx;
	border-radius: 10rpx;
	border: 1rpx solid #b6b6b6;
}
.status>view:last-child>view:last-child{
	width: 150rpx;
	height: 70rpx;
	border-radius: 10rpx;
	border: 1rpx solid #550000;
	margin-left: 10rpx;
	background-color: #7f0000;
	color: #ffffff;
}
.tag{
	z-index: 2020;
}


